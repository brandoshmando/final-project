%h2 New Eval
= form_for @eval, :html => {:multipart => true} do |f|
  = f.label :title
  = f.text_field :title
  = f.label :template
  = f.select :template, [['Rubric', 'rubric'], ['Scheme', 'scheme']]
  %br
  %br
  %h2 New Categories
  %div#category_form
  = f.fields_for :categories do |cf|
    = cf.label :category
    = cf.text_field :title
    = cf.label :score
    = cf.number_field :max_score
    %br
    %br
    %h2 New Comments
    = cf.fields_for :comments do |kf|
      = kf.label :comment
      = kf.text_field :description
  = f.submit "Save"