-if @roster.errors.any?
  = render 'roster_errors'
=form_for [@course, @roster] do |f|
  .user-input
    = f.label :section_name, "Section Name:"
    = f.text_field :section_name
  .user-input
    =f.label :meet_day, "Day:"
    =f.select :meet_day, days_of_week
  .user-input
    =f.label :meet_time, "Time:"
    =f.select :meet_time, time_slots
  .user-input
    =f.label :location, "Location:"
    =f.text_field :location

    =f.fields_for :students do |ff|
      .upload-btn
        =ff.label :file, "Import a CSV:"
        =ff.file_field :file
  .submit-btn
    =f.button