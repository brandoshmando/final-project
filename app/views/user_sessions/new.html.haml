%h1 Log in!
.session-form
  =form_tag sessions_path do
    .user-input
      = label_tag :email, "Email:"
      = text_field_tag :email, nil, placeholder:"Enter email address..."
    .user-input
      = label_tag :password, "Password:"
      = password_field_tag :password, nil, placeholder:"Enter password..."
    .submit-btn
      = button_tag "Log in"

