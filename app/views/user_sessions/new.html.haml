%h1 Log in!
.session-form
  =form_tag user_sessions_path do
    .user-input
      = label_tag :email, "Email:"
      = text_field_tag :email, nil, placeholder:"Enter email address..."
    .user-input
      = label_tag :password, "Password:"
      = password_field_tag :password, nil, placeholder:"Enter password..."
    .user-input
      = label_tag :remember, "Remember me"
      = check_box_tag :remember
    .submit-btn
      = button_tag "Log in"
    = link_to "Forgot Password?", new_password_reset_path

